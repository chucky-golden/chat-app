<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/dist/css/project.css">
    <title>Node Chat App</title>
</head>

<body>
    <div class="container-fluid dash">
        <div class="row text-center mt-5">
            <h1 class="fw-bold">Node <span class="text-success">Chat</span> App</h1>
            <p class="fw-bold">user login</p>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form action="/" method="POST" class="was-validated">
                    <%- include('./layout/alerts.ejs') %>
                    <div class="form-group p-3">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter email" name="email"
                            required>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                    <div class="form-group p-3">
                        <label for="pwd">Password:</label>
                        <input type="password" class="form-control" id="pwd" placeholder="Enter password"
                            name="password" required>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                    <div class="form-group p-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form><br>
                <p>Not yet a member ? clicke <a href="/register"><b>HERE</b></a> to register</p>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</body>
<script src="/dist/js/all.js"></script>
<script src="/dist/js/bootstrap.bundle.min.js"></script>

</html>